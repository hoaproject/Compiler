{
    "name": "sanmai/hoa-compiler",
    "type": "library",
    "description": "The Hoa\\Compiler library.",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Ivan Enderlin"
        },
        {
            "name": "Hoa community"
        }
    ],
    "require": {
        "php": "^7.0",
        "hoa/iterator": "^2.17",
        "hoa/visitor": "^2.17"
    },
    "replace": {
        "hoa/compiler": "3.17.08.08"
    },
    "require-dev": {
        "atoum/atoum": "^3",
        "atoum/stubs": "*",
        "friendsofphp/php-cs-fixer": "^2.15",
        "hoa/console": "^3",
        "hoa/file": "*",
        "hoa/json": "^2",
        "hoa/regex": "^1",
        "hoa/test": "^2",
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": ">=6.5.14",
        "sanmai/linter": "^0.1.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev"
        }
    },
    "suggest": {
        "hoa/regex": "For getAST to work",
        "hoa/file": "For getAST to work",
        "sanmai/hoa-protocol": "If you have trouble with a conflicting resolve()"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Hoa\\Compiler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hoa\\Compiler\\Test\\": "atoum/",
            "Tests\\Hoa\\Compiler\\": "tests/"
        }
    }
}
